<%- include ('partials/header') %>

<div class="container">
  <h1>Edit Information</h1>

  <form action="/mange/profile/<%= user_._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input
        type="text"
        name="user_[fullname]"
        placeholder="fullname"
        value="<%= user_.fullname %>"
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        name="user_[username]"
        placeholder="username"
        value="<%= user_.username %>"
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        name="user_[age]"
        placeholder="Age"
        value="<%= user_.age %>"
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        name="user_[image]"
        placeholder="Image link"
        value="<%= user_.image %>"
      />
    </div>

    <div class="form-group">
      <input
        type="text"
        name="user_[arabic_name]"
        placeholder="Arabic Name"
        value="<%= user_.arabic_name %>"
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        name="user_[email]"
        placeholder="Email Address"
        value="<%= user_.email %>"
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        name="user_[mobile_number]"
        placeholder="Mobile Number"
        value="<%= user_.mobile_number %>"
      />
    </div>
    <div class="form-group">
      <input class="btn btn-primary" type="submit" value="Submit" />
    </div>
  </form>
</div>

<%- include ('partials/footer') %>
