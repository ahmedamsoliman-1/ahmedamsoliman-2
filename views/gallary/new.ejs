<%- include ('../partials/header') %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Add new picture</h1>

    <div style="width: 30%; margin: 25px auto">
      <form action="/gallary/local" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="name"
          />
        </div>
        <div class="form-group">
          <input
            size="50"
            class="form-control"
            type="text"
            name="image"
            placeholder="image url"
          />
        </div>

        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="description"
            placeholder="description"
          />
        </div>

        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block">Submit!</button>
        </div>
      </form>

      <a href="/gallary/local">Back</a>
    </div>
  </div>
</div>
