<%- include ('../partials/header') %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Weclome To My gallary!</h1>
      <a>View my best Instagram pics</a>
      <p>
        <a class="btn btn-primary btn-large" href="/gallary/local/new">
          Add New Picture</a
        >
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% pict.forEach(function(pic) { %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= pic.image %>" />
        <div class="caption">
          <h4><%= pic.name %></h4>
        </div>
        <p>
          <a href="/gallary/local/<%= pic._id %>" class="btn btn-primary"
            >Expand</a
          >
        </p>
      </div>
    </div>
    <% }); %>
  </div>
</div>
