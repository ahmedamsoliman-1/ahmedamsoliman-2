<%- include ('../partials/header') %>


<div class="container">
    <div class="row">

        <div class="col-md-12">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= _pict.image %>">
                <div class="caption-full">
                    <h4><a><%= _pict.name %></a></h4>
                    <p> <%= _pict.description %> </p>

                    <a class="btn btn-large btn-warning" href="/_picts/<%= _pict._id %>/edit">Edit</a>
                    <form id="delete-form" action="/_picts/<%= _pict._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-large btn-danger">Delete</button>
                    </form>

                </div>
            </div>
            <div class="well">
                 <div class="text-right">
                    <a class="btn btn-success" href="/_picts/<%= _pict._id %>/comments/new">Add new comment</a>
                 </div>
            </div>

        </div>
    </div>
    <div class="text-left">
        <a class="btn btn-default" href="/gallary/local">Back</a>
     </div>
</div>
