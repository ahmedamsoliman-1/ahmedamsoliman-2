<%- include ('../partials/header') %>

        <title>Todo List<i class="fas fa-address-book"></i></title>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">    
        <link href="../../stylesheets/todo.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css">
        <script src="../../js/lib/jquery-3.6.0.min.js" type="text/javascript"></script>
    </head>
    
    <body> 
        <div id="container">
            <h1>To-Do List <i class="fa fa-plus"></i></h1>
            <input placeholder="Add new todo" type="text"></input>
    
            <ul>
                <li><span><i class="fa fa-trash"></i></span> First todo</li>
                <li><span><i class="fa fa-trash"></i></span> Todo two</li>
                <li><span><i class="fa fa-trash"></i></span> Three todo</li>
            </ul>
    
        </div>
    
    
        <script>
            // Check off todos by click
            $("ul").on("click", "li", function()
            {
                $(this).toggleClass("completed");
            });
            
            // click on X to delete
            $("ul").on("click", "span", function(event)
            {
                $(this).parent().fadeOut(500, function()
                {
                    $(this).remove();
                });
                event.stopPropagation();
            });
            
            //input
            $("input[type='text']").keypress(function(event)
            {
                if(event.which === 13)
                {
                    var todoText = $(this).val();
                    $(this).val("");
                    //create new li
                    $("ul").append("<li><span><i class='fa fa-trash'></i></span> " + todoText + "</li>")
                }
            });
            
            $(".fa-plus").click(function()
            {
                $("input[type='text']").fadeToggle();
            });
        </script>
    </body>
    
    </html>
